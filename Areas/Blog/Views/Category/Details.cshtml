@model AppMvc.Models.Blog.Category

@{
    ViewData["Title"] = Model.Title;
}

<h1>Nội dung chuyên mục</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Nội dung
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Content)
        </dd>
        <dt class = "col-sm-2">
            URL
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Slug)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Sửa</a> |
    <a asp-action="Index">Danh sách chuyên mục</a>
</div>
